<idea-plugin version="2">
    <id>ke.co.pyxis.vaadin.plugin.pluginid</id>
    <name>Vaadin Crud Generator</name>
    <version>1.0</version>
    <vendor url="https://github.com/enyachoke">Emmanuel Nyachoke</vendor>

    <description><![CDATA[
      Generates vaadin crud views based on a jpa entity. This plugin is based on
      intellij-jpa-thymeleaf-scaffolder by Peter Wright. I take no credit.
      ]]></description>

    <change-notes><![CDATA[]]></change-notes>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="generateThymeleafEntityTemplate" class="ke.co.pyxis.vaadin.plugin.GenerateVaadinEntityTemplate"
                text="Vaadin Crud" description="Generates vaadin crud views based on a jpa entity">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
</idea-plugin>